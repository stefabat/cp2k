&GLOBAL
  PROJECT si8_smearing_dens
  PRINT_LEVEL MEDIUM
  RUN_TYPE RT_PROPAGATION
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &PRINT
    &FORCES ON
    &END
  &END
  &DFT
    LSD
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    RESTART_FILE_NAME si8_smearing_dens-RESTART.wfn
    &REAL_TIME_PROPAGATION
       APPLY_DELTA_PULSE
       DELTA_PULSE_DIRECTION 1 0 0
       DELTA_PULSE_SCALE 0.1
       PERIODIC .TRUE.
       MAX_ITER 50
       MAT_EXP TAYLOR
       DENSITY_PROPAGATION .TRUE.
       MCWEENY_MAX_ITER 0
       EXP_ACCURACY 1.0E-8
       EPS_ITER 1.0E-7
       PROPAGATOR ETRS
       INITIAL_WFN RESTART_WFN
    &END
    &MGRID
      NGRIDS 4
      CUTOFF 40
    &END MGRID
    &QS
      METHOD GPW
      EXTRAPOLATION PS
      EXTRAPOLATION_ORDER 2
    &END QS
     &SCF
      SCF_GUESS MOPAC
      MAX_SCF   5
      EPS_SCF 1.0e-7
      EPS_DIIS 1.0e-7
      &OUTER_SCF OFF
        EPS_SCF 1.0E-6
        MAX_SCF 1
      &END
      &OT OFF
        PRECONDITIONER FULL_ALL
        ENERGY_GAP 0.001
      &END OT
      &SMEAR
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE   1000.
      &END
      &MIXING
          METHOD PULAY_MIXING
          ALPHA   0.4
          BETA   1.0
          NPULAY  5
          PULAY_ALPHA 0.0
      &END
      CHOLESKY OFF
      ADDED_MOS   5 5
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &MULLIKEN OFF
      &END MULLIKEN
      &HIRSHFELD OFF
      &END HIRSHFELD
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
       A  5.42858871335   1.0   0.0
       B   0.0    5.42858871335  0.0
       C   0.00     0.00  5.42858871335
    &END CELL
    &KIND  Si
      BASIS_SET  DZVP-GTH
      POTENTIAL  GTH-PBE-q4
    &END
    &TOPOLOGY
      COORD_FILE_NAME ../sample_xyz/SI_8.xyz
      COORDINATE XYZ
      CONNECTIVITY OFF
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
&MOTION
  &MD
    STEPS 1
    TIMESTEP [au_t] 0.01
  &END
&END MOTION

