&GLOBAL
  PROJECT  H2O_stress
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY_FORCE
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &PRINT
    &STRESS_TENSOR
    &END
  &END
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    BASIS_SET_FILE_NAME  BASIS_ADMM
    SORT_BASIS EXP
    POTENTIAL_FILE_NAME  POTENTIAL
    &AUXILIARY_DENSITY_MATRIX_METHOD
      ADMM_PURIFICATION_METHOD NONE
      EXCH_CORRECTION_FUNC PBEX
    &END
    &MGRID
      CUTOFF  100
      REL_CUTOFF  30
    &END MGRID
    &QS
      METHOD GPW
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-6
      MAX_SCF 100
      &OT
         PRECONDITIONER FULL_ALL
         MINIMIZER DIIS
      &END OT
    &END SCF
    &XC
      # Not a very useful functional, just for testing
      2ND_DERIV_ANALYTICAL FALSE
      &XC_FUNCTIONAL PBE
         &PBE
            SCALE_X 0.55
         &END PBE
      &END XC_FUNCTIONAL
      &HF
        FRACTION 0.45
        &SCREENING
          EPS_SCHWARZ 1.0E-8
          SCREEN_ON_INITIAL_P FALSE
        &END SCREENING
        &INTERACTION_POTENTIAL
           CUTOFF_RADIUS 2.0
           POTENTIAL_TYPE TRUNCATED
        &END INTERACTION_POTENTIAL
      &END HF
      &WF_CORRELATION
        &RI_RPA
          QUADRATURE_POINTS  3
        &END
        &LOW_SCALING
          MEMORY_CUT 2
        &END
        &INTEGRALS
          ERI_METHOD GPW
          &WFC_GPW
             CUTOFF 80
             REL_CUTOFF 25
          &END
        &END INTEGRALS
        &RI
          &RI_METRIC
            POTENTIAL_TYPE IDENTITY
          &END
        &END RI
      &END
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  4.500   4.500  4.500
    &END CELL
    &KIND H
      BASIS_SET  DZVP-GTH
      BASIS_SET  AUX_FIT FIT3
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q1
    &END KIND
    &KIND O
      BASIS_SET  DZVP-GTH
      BASIS_SET  AUX_FIT FIT3
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q6
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  H2O_gas.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
